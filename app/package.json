{
  "name": "scrollcaster-app",
  "version": "1.0.0",
  "directories": {
    "lib": "lib",
    "pages": "pages"
  },
  "dependencies": {
    "@babel/core": "7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@tsconfig/node20": "^20.1.6",
    "babel": "^6.23.0",
    "babel-loader": "^10.0.0",
    "babel-preset-minify": "^0.5.2",
    "circular-dependency-plugin": "^5.2.2",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "terser-webpack-plugin": "^5.3.14",
    "typescript": "^5.8.3",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.5",
    "jest-localstorage-mock": "^2.4.26",
    "typescript-eslint": "^8.38.0"
  },
  "type": "module",
  "scripts": {
    "install-shared-lib": "rm -rf shared-lib && cp -R ../shared-lib shared-lib",
    "buildts": "npm run install-shared-lib && npx tsc -p .",
    "package": "npx webpack && cd build && node ./build.js",
    "build": "npm run buildts && npm run package",
    "lint": "npx eslint .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-localstorage-mock"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  }
}

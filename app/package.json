{
  "name": "scrollcaster-app",
  "version": "1.0.0",
  "directories": {
    "lib": "lib",
    "pages": "pages"
  },
  "dependencies": {
    "@babel/core": "7.28.0",
    "@tsconfig/node20": "^20.1.6",
    "babel": "^6.23.0",
    "babel-preset-minify": "^0.5.2",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.5",
    "jest-localstorage-mock": "^2.4.26"
  },
  "type": "module",
  "scripts": {
    "install-shared-lib": "rm -rf shared-lib && cp -R ../shared-lib shared-lib",
    "buildts": "npm run install-shared-lib && npx tsc -p .",
    "package": "cd build && node ./build.js",
    "build": "npm run buildts && npm run package",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "jest": {
    "setupFilesAfterEnv": ["jest-localstorage-mock"],
    "testMatch": [
      "**/*.test.js"
    ]
  }
}

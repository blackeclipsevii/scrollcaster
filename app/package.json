{
  "name": "scrollcaster-app",
  "version": "1.0.0",
  "directories": {
    "lib": "lib",
    "pages": "pages"
  },
  "dependencies": {
    "@tsconfig/node20": "^20.1.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "circular-dependency-plugin": "^5.2.2",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "ts-loader": "^9.5.2",

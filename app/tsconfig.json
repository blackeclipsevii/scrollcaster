{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "target": "es2020",
    "strict": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["dom", "es2020"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@res/*": ["resources/*"],
      "@ico/*": ["resources/flaticon/*"]
    }
  },

  "include": ["lib/version.ts", "pages/**/*", "lib/**/*", "shared-lib/**/*"],
  "exclude": ["node_modules"]
}

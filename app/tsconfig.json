{
  "extends": "../tsconfig.base.json",
  "references": [
    { "path": "../packages/shared-lib" }
  ],
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "target": "es2020",
    "strict": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "types": ["vite-plugin-pwa/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@res/*": ["resources/*"],
      "@ico/*": ["resources/flaticon/*"]
    }
  },

  "include": ["version.ts", "releaseNotes.ts", "pages/**/*", "lib/**/*"],
  "exclude": ["node_modules"]
}

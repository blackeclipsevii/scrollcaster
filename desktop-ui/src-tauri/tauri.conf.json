{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop-ui",
  "version": "0.1.0",
  "identifier": "com.desktop-ui.app",
  "build": {
    "frontendDist": "../../app"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "scrollcaster",
        "width": 450,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../../app/resources/scrollcaster-icon.ico"
    ]
  }
}
